<mvc:View xmlns:core="sap.ui.core" xmlns:mvc="sap.ui.core.mvc" xmlns="sap.m" xmlns:html="http://www.w3.org/1999/xhtml"
	controllerName="cl.POReportForSCM.controller.V_PODetail">
	<App>
		<pages>
			<Page xmlns:action="http://schemas.sap.com/sapui5/extension/sap.ui.core.CustomData/1" title="{i18n>PODetailTitle}" showNavButton="true"
				navButtonPress="GoToPOHeader">
				<content>
					<VBox width="100%" direction="Column" id="vbox0">
						<items>
							<Text xmlns="sap.m" text="PO Number: {Ebeln}" id="text1"/>
							<Text xmlns="sap.m" text="Company Code: {Bukrs}" id="text2"/>
							<Text xmlns="sap.m" text="PO Type: {Bsart}" id="text3"/>
							<Text xmlns="sap.m" text="Payment Terms: {Zterm}" id="text4"/>
							<Text xmlns="sap.m" text="Created By: {Ernam}" id="text5"/>
						</items>
					</VBox>
					<Button xmlns="sap.m" text="{i18n>PODetailButton}" id="button0" icon="sap-icon://arrow-right" width="150px" press="GoToPOItem"/>
				</content>
			</Page>
		</pages>
	</App>
</mvc:View>